{
  "id": "www",
  "owner": "www",
  "group": "www",
  "deploy_to": "/srv/www",
  "server_roles": ["standalone"],
  "mysql_master_role": ["standalone"],
  "ingredients": {
    "standalone": ["database.yml"]
  },
  "databases": {
    "production": {
      "adapter": "mysql",
      "database": "www_production",
      "username": "www_production",
      "password": "password",
      "reconnect": true
    },
    "another_production_database": {
      "adapter": "mysql2",
      "database": "www_production_also",
      "username": "www_production",
      "password": "password",
      "reconnect": true
    },
    "production_secret": {
      "adapter": "mysql",
      "database": "www_prod_secret",
      "username": "www_prod_secret",
      "reconnect": true
    },
    "production_host": {
      "adapter": "mysql",
      "database": "www_prod_host",
      "username": "www_prod_host",
      "password": "www_prod_host",
      "host": "127.0.0.1"
    },
    "production_pg": {
      "adapter": "postgresql",
      "database": "www_prod_pg",
      "username": "www_prod_pg",
      "password": "password",
      "host": "127.0.0.1"
    },
    "staging": {
      "adapter": "mysql",
      "database": "www_staging",
      "username": "www_staging",
      "password": "password"
    }
  }
}
